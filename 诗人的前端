            "晚明名士": { period: "1550-1644", intro: "晚明诗风求变。", poets: [ { name: "汤显祖", desc: "字义仍，号海若，临川人。戏剧大师，《牡丹亭》作者。有《玉茗堂全集》。" }, { name: "徐渭", desc: "字文长，号青藤道士，山阴人。奇才。诗书画三绝。有《徐文长三集》。" }, { name: "屠隆", desc: "字长卿，号赤水，鄞县人。诗文秀逸。有《由拳集》。" }, { name: "王稚登", desc: "字百谷，武进人。吴门后劲。有《王百谷集》。" }, { name: "陈继儒", desc: "字仲醇，号眉公，华亭人。隐士。小品文名家。有《陈眉公全集》。" }, { name: "董其昌", desc: "字玄宰，号思白，华亭人。书画大家。有《容台集》。" }, { name: "李贽", desc: "字卓吾，泉州人。思想家。童心说。有《焚书》。" }, { name: "张岱", desc: "字宗子，号陶庵，山阴人。散文名家。《陶庵梦忆》作者。有《琅嬛文集》。" } ] },
            "明末忠烈": { period: "1584-1646", intro: "明末抗清志士。", poets: [ { name: "倪元璐", desc: "字玉汝，号鸿宝，上虞人。明末名臣。自缢殉国。有《倪文贞集》。" }, { name: "黄道周", desc: "字幼平，号石斋，漳浦人。明末大儒。抗清就义。有《石斋集》。" }, { name: "陈子龙", desc: "字卧子，号大樽，松江人。几社领袖。投水殉国。有《陈忠裕公全集》。" }, { name: "夏完淳", desc: "字存古，松江人。少年英雄。就义时年仅十七。有《南冠草》。" }, { name: "张煌言", desc: "字玄著，号苍水，鄞县人。抗清英雄。有诗史之称。有《张苍水集》。" }, { name: "瞿式耜", desc: "字起田，号稼轩，常熟人。抗清名臣。殉国。有《瞿忠宣公集》。" } ] },
            "江左三大家": { period: "1582-1673", intro: "明末清初诗坛盟主。", poets: [ { name: "钱谦益", desc: "字受之，号牧斋，常熟人。江左三大家之首。有《初学集》。" }, { name: "吴伟业", desc: "字骏公，号梅村，太仓人。梅村体创始者。《圆圆曲》作者。有《梅村家藏稿》。" }, { name: "龚鼎孳", desc: "字孝升，号芝麓，合肥人。江左三大家之一。有《定山堂集》。" } ] },
            "岭南三大家": { period: "1602-1696", intro: "清初岭南诗派。", poets: [ { name: "屈大均", desc: "字翁山，番禺人。反清复明志士。有《翁山诗外》。" }, { name: "陈恭尹", desc: "字元孝，顺德人。有《独漉堂集》。" }, { name: "梁佩兰", desc: "字芝五，南海人。有《六莹堂集》。" } ] },
            "明末遗民": { period: "1613-1692", intro: "明清之际遗民诗人。", poets: [ { name: "方以智", desc: "字密之，桐城人。思想家。有《浮山集》。" }, { name: "钱澄之", desc: "字饮光，桐城人。有《田间集》。" }, { name: "顾炎武", desc: "字宁人，号亭林，昆山人。思想家。天下兴亡匹夫有责。有《亭林诗文集》。" }, { name: "吴嘉纪", desc: "字宾贤，泰州人。遗民诗人。有《陋轩诗》。" }, { name: "归庄", desc: "字尔礼，昆山人。狂士。有《归庄集》。" }, { name: "傅山", desc: "字青主，阳曲人。医学家。拒不仕清。有《霜红龛集》。" }, { name: "龚贤", desc: "字半千，昆山人。金陵八家之一。有《香草堂集》。" }, { name: "杜濬", desc: "字于皇，黄冈人。有《变雅堂文集》。" }, { name: "申涵光", desc: "字孚孟，永年人。有《聪山集》。" } ] },
            "东林党人": { period: "1573-1625", intro: "东林书院学派。", poets: [ { name: "文震孟", desc: "字文起，长洲人。天启状元。有《姑苏名贤小记》。" }, { name: "周顺昌", desc: "字景文，吴县人。死于狱中。有《烬余集》。" }, { name: "左光斗", desc: "字遗直，桐城人。死于狱中。有《左忠毅公集》。" }, { name: "祁彪佳", desc: "字弘吉，山阴人。投水自尽。有《祁忠惠公集》。" } ] },
            "其他名家": { period: "1330-1662", intro: "其他明朝重要诗人。", poets: [ { name: "罗贯中", desc: "名本，太原人。《三国演义》作者。" }, { name: "施耐庵", desc: "名子安，苏州人。《水浒传》作者。" }, { name: "张名振", desc: "字侯服，江宁人。南明抗清名将。" }, { name: "郑成功", desc: "本名森，字大木，南安人。民族英雄。" } ] }
        };

        const knotSVG = '<svg viewBox="0 0 40 40"><circle cx="20" cy="20" r="8" stroke-width="1.5"/><circle cx="20" cy="20" r="4" stroke-width="1"/><path d="M12 20 Q8 12, 20 8 Q32 12, 28 20 Q32 28, 20 32 Q8 28, 12 20" stroke-width="1"/></svg>';

        document.addEventListener('DOMContentLoaded', function() { 
            initArticleModal(); 
            initNavigation(); 
            initTimeline(); 
            initStats(); 
            initInteractions(); 
            initScrollReveal(); 
        });

        function initArticleModal() {
            const modal = document.getElementById('articleModal');
            const titleEl = document.getElementById('articleTitle');
            const bodyEl = document.getElementById('articleBody');
            const closeBtn = document.getElementById('closeArticle');

            document.querySelectorAll('.article-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    const key = btn.dataset.article;
                    const article = articlesData[key];
                    if (article) {
                        titleEl.textContent = article.title;
                        bodyEl.innerHTML = article.content;
                        modal.classList.add('show');
                    }
                });
            });

            closeBtn.addEventListener('click', () => modal.classList.remove('show'));
            modal.addEventListener('click', (e) => { if (e.target === modal) modal.classList.remove('show'); });
        }

        function initNavigation() {
            const navScroll = document.getElementById('navScroll');
            let html = ''; Object.keys(poetsData).forEach((period) => { html += '<button class="nav-btn" data-period="' + period + '">' + period + '</button>'; });
            navScroll.innerHTML = html;
            navScroll.querySelectorAll('.nav-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const period = this.dataset.period; const section = document.querySelector('[data-section="' + period + '"]');
                    if (section) { const navHeight = document.getElementById('navContainer').offsetHeight; const sectionTop = section.getBoundingClientRect().top + window.pageYOffset; window.scrollTo({ top: sectionTop - navHeight - 20, behavior: 'smooth' }); }
                });
            });
        }

        function initTimeline() {
            const container = document.getElementById('timelineContainer'); let html = '';
            Object.entries(poetsData).forEach(([period, data]) => {
                html += '<section class="period-section" data-section="' + period + '"><div class="period-header"><h2 class="period-title">' + period + '</h2><div class="period-line"></div></div><p style="color: var(--ink-light); margin-bottom: 20px; padding-left: 10px; font-size: 0.9rem;">' + data.period + ' · ' + data.intro + '</p><div class="rope-timeline"><div class="rope-line"></div>';
                data.poets.forEach((poet, idx) => { html += '<div class="poet-node" data-period="' + period + '" data-index="' + idx + '"><div class="knot">' + knotSVG + '</div><span class="poet-name">' + poet.name + '</span></div>'; });
                html += '</div></section>';
            });
            container.innerHTML = html;
        }

        function initStats() {
            const statsContainer = document.getElementById('statsContainer'); let html = '';
            Object.entries(poetsData).forEach(([period, data]) => { html += '<div class="info-stat"><span>' + period + '</span><span>' + data.poets.length + '人</span></div>'; });
            statsContainer.innerHTML = html; animateNumber('totalCount', 0, 100, 1500);
        }
        
        function animateNumber(elementId, start, end, duration) { const element = document.getElementById(elementId); if (!element) return; const startTime = performance.now(); function update(currentTime) { const elapsed = currentTime - startTime; const progress = Math.min(elapsed / duration, 1); const easeOut = 1 - Math.pow(1 - progress, 3); element.textContent = Math.floor(start + (end - start) * easeOut); if (progress < 1) requestAnimationFrame(update); } requestAnimationFrame(update); }

        function initInteractions() {
            const overlay = document.getElementById('overlay'); const detail = document.getElementById('poetDetail'); const closeBtn = document.getElementById('detailClose');
            document.querySelectorAll('.poet-node').forEach(node => { node.addEventListener('click', function() { const period = this.dataset.period; const index = parseInt(this.dataset.index); const poet = poetsData[period].poets[index]; showPoetDetail(poet, period, this); }); });
            function closeDetail() { overlay.classList.remove('show'); detail.classList.remove('show'); document.querySelectorAll('.poet-node').forEach(n => n.classList.remove('active')); }
            closeBtn.addEventListener('click', closeDetail); overlay.addEventListener('click', closeDetail); 
            document.addEventListener('keydown', function(e) { if (e.key === 'Escape') { closeDetail(); document.getElementById('articleModal').classList.remove('show'); } });
        }

        function showPoetDetail(poet, period, node) {
            const overlay = document.getElementById('overlay'); const detail = document.getElementById('poetDetail');
            document.getElementById('detailName').textContent = poet.name; document.getElementById('detailPeriod').textContent = poetsData[period].period; document.getElementById('detailIntro').textContent = poet.desc;
            document.getElementById('detailLink').href = 'https://baike.baidu.com/item/' + encodeURIComponent(poet.name);
            document.querySelectorAll('.poet-node').forEach(n => n.classList.remove('active')); node.classList.add('active');
            overlay.classList.add('show'); detail.classList.add('show');
        }

        function initScrollReveal() {
            const navButtons = document.querySelectorAll('.nav-btn'); const navContainer = document.getElementById('navContainer'); const navHeight = navContainer.offsetHeight;
            const sectionObserver = new IntersectionObserver((entries) => { entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('visible'); }); }, { threshold: 0.1 });
            const navObserver = new IntersectionObserver((entries) => { entries.forEach(entry => { if (entry.isIntersecting) { const period = entry.target.dataset.section; if (period) { navButtons.forEach(btn => { btn.classList.toggle('active', btn.dataset.period === period); }); } } }); }, { threshold: 0, rootMargin: '-' + (navHeight + 10) + 'px 0px -70% 0px' });
            document.querySelectorAll('.period-section').forEach(section => { sectionObserver.observe(section); navObserver.observe(section); });
        }
    <\/script>
</body>
</html>`;
}
